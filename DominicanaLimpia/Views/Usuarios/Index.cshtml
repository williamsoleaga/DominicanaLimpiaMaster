@model IEnumerable<DominicanaLimpia.Usuarios>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h4>Listado usuarios</h4>
<hr />

<p>
    <div class="text-right">
        <input value="Crear usuario" class="btn btn-default" onclick="location.href='@Url.Action("Create", "Usuarios")'" />
    </div>
</p>
<br />
<br />

<table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>
                Usuario
            </th>
            <th>
                Clave
            </th>
            <th>
                Nombre completo
            </th>
            <th>
                Correo
            </th>
            <th>
                Rol
            </th>
            <th>
                Estatus
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Completo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RolId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estatus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UsuarioId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.UsuarioId })
                </td>
            </tr>
        }

    </tbody>
</table>
