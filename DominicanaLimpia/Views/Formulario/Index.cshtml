@model IQueryable<DominicanaLimpia.Formulario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    DominicanalimpiaEntities1 db = new DominicanalimpiaEntities1();
}
<br />
<br />
<div class="col-md-14 mb-4">
    <div class="card">
        <div class="card-body">

            <h4>Listado de formularios</h4>
            <hr />
            <p>
                <div class="text-right">
                    <input value="Crear formulario" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Formulario")'" />
                </div>
            </p>
            <table class="table table-hover" id="dtBasicExample">
                <thead  class="blue lighten-4">
                    <tr>
                        <th>
                            Usuario
                        </th>
                        <th>
                            Fecha desde
                        </th>
                        <th>
                            Fecha Hasta
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
        {
                    <tr>
                        <td>
                            @{
            var Nombreusuario = db.Usuarios.Where(x => x.UsuarioId == item.Idusuario).Select(x => x.Nombre_Completo).FirstOrDefault();
                            }
                            @Nombreusuario
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Desde)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hasta)
                        </td>
                        <td>

                            @Html.ActionLink("Editar", "Edit", new { id = item.FormularioId }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Editar", "Edit", new { id = item.FormularioId }, new { @class = "btn btn-primary btn-sm" })

                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>

