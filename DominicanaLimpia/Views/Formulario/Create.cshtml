@model DominicanaLimpia.Formulario

@{
    int Contador = 0;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
<link href="~/Content/JquerySteep/jquerysteep.css" rel="stylesheet" />
<script src="~/Content/JquerySteep/jquery.steps.js"></script>
<script src="~/Content/JquerySteep/jquery.steps.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>


@using (Html.BeginForm("Create", "Formulario", FormMethod.Post , new { id = "Formulario" }))
{

@Html.AntiForgeryToken()

<div class="form-horizontal">
    <br /> <br />
    <div class="col-md-14 mb-4">
        <div class="card">
            <div class="well">
                <table class="table">
                    <thead>
                        <tr>
                            <th> <strong>Desde:</strong> <input type="text" class="form-control" name="DesdeFecha" id="DesdeFecha"></th>

                            <th> <strong>Hasta:</strong> <input type="text" class="form-control" name="HastaFecha" id="HastaFecha"></th>
                        </tr>
                    </thead>
                </table>
            </div>

            <br /><br /><br />
            <div class="card-body" id="example-basic">

                <h3>Pagina</h3>
                <section>
                    @foreach (var item in Model.Preguntas)
                    {
                        if (Contador < 9)
                        {
                            <div class="form-group">
                                <div class="block">
                                    <strong>@item.Descripcion</strong>
                                    <input type="number" name="Valores[]" id="Valores[]" />
                                    <hr>
                                </div>
                            </div>
                            if (Contador == 8)
                            {
                                Contador = 0;
                                break;

                            }
                        }
                        Contador = Contador + 1;
                    }
                </section>


                <h3>Pagina</h3>
                <section>
                    @foreach (var item in Model.Preguntas)
                    {
                        if (Contador >= 9 && Contador < 18)
                        {
                            <div class="form-group">
                                <div class="block">
                                    <strong>@item.Descripcion</strong>
                                    <input type="number" name="Valores[]" id="Valores[]" />
                                    <hr>
                                </div>
                            </div>
                            if (Contador == 17)
                            {
                                Contador = 0;
                                break;

                            }
                        }
                        Contador = Contador + 1;
                    }
                </section>


                <h3>Pagina</h3>
                <section>
                    @foreach (var item in Model.Preguntas)
                    {
                        if (Contador >= 18 && Contador < 27)
                        {
                            <div class="form-group">
                                <div class="block">
                                    <strong>@item.Descripcion</strong>
                                    <input type="number" name="Valores[]" id="Valores[]" />
                                    <hr>
                                </div>
                            </div>
                            if (Contador == 26)
                            {
                                Contador = 0;
                                break;

                            }
                        }
                        Contador = Contador + 1;
                    }
                </section>
                <h3>Pagina</h3>
                <section>
                    @foreach (var item in Model.Preguntas)
                    {
                        if (Contador >= 27 && Contador < 34)
                        {
                            <div class="form-group">
                                <div class="block">
                                    <strong>@item.Descripcion</strong>
                                    <input type="number" name="Valores[]" id="Valores[]" />
                                    <hr>
                                </div>
                            </div>
                            if (Contador == 33)
                            {

                                Contador = 0;
                                break;
                            }
                        }
                        Contador = Contador + 1;
                    }
                </section>
            </div>
            <div class="form-group">
                <strong>Comentario</strong>
                <textarea class="form-control" name="Comentario"  id="Comentario" rows="7"></textarea>
            </div>

        </div>
    </div>
</div>

}


<script type="text/javascript">


    $("#DesdeFecha").datepicker({
        autoclose: true,
        todayHighlight: true,
        format: 'dd/mm/yyyy'
    }).datepicker('update', new Date());


    $("#HastaFecha").datepicker({
        autoclose: true,
        todayHighlight: true,
        format: 'dd/mm/yyyy'
    }).datepicker('update', new Date());


    $("#example-basic").steps({
        headerTag: "h3",
        bodyTag: "section",
        transitionEffect: "slideLeft",
        autoFocus: true,
        onFinishing: function (event, currentIndex) {

           document.getElementById('Formulario').submit();

            @*$.ajax({
                type: 'POST',
